<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:id="@+id/txt_helloWorld"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pseudo"
            android:id="@+id/txt_Pseudo"
            android:layout_below="@+id/txt_helloWorld"
            android:layout_alignLeft="@+id/txt_helloWorld"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/txt_Upload"
            android:layout_below="@+id/txt_Pseudo"
            android:layout_alignLeft="@+id/txt_Pseudo"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:id="@+id/txt_Download"
            android:layout_below="@+id/txt_Upload"
            android:layout_alignLeft="@+id/txt_Upload"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ratio"
            android:id="@+id/txt_Ratio"
            android:layout_below="@+id/txt_Download"
            android:layout_alignLeft="@+id/txt_Download"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classe"
            android:id="@+id/txt_Class"
            android:layout_below="@+id/txt_Ratio"
            android:layout_alignLeft="@+id/txt_Ratio"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karma"
            android:id="@+id/txt_Karma"
            android:layout_below="@+id/txt_Class"
            android:layout_alignLeft="@+id/txt_Class"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aura"
            android:id="@+id/txt_Aura"
            android:layout_below="@+id/txt_Karma"
            android:layout_alignLeft="@+id/txt_Karma"/>

</RelativeLayout>
